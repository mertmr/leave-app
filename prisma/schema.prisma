// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Leave {
    id          Int      @id @default(autoincrement())
    name        String
    createdDate DateTime @default(now())
    startDate   DateTime
    endDate     DateTime
    reason      String   @db.VarChar(255)
    userId      String

    @@index([userId])
}
